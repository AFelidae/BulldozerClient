{
  "schemaVersion": 1,
  "id": "basemod",
  "version": "${version}",
  "name": "Bulldozer",
  "description": "A client side utility mod for building structures in minecraft.",
  "authors": [
    "AFelidae"
  ],
  "contact": {
    "homepage": "https://github.com/AFelidae",
    "sources": "https://github.com/AFelidae"
  },
  "icon": "assets/basemod/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "bulldozer.Client"
    ]
  },
  "mixins": [
    "bulldozer.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.7.1",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": "1.16.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
